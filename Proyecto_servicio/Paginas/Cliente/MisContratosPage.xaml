<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_servicio.Paginas.MisContratosPage"
             Title="MisContratosPage">
    <CollectionView x:Name="lista" SelectionMode="Single" SelectionChanged="OnSelect">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Black" Padding="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding TipoTramite}" FontAttributes="Bold"/>
                        <Label Text="{Binding Estado}"/>
                        <Label Text="{Binding FechaCreacion}"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>