<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_servicio.Paginas.PaginaPrincipal"
             Title=""
             BackgroundColor="#dfdaca">
    <!-- GRID PRINCIPAL -->
    <Grid RowDefinitions="Auto,*,Auto">

        <!-- ================= MENÚ SUPERIOR ================= -->
        <Grid Grid.Row="0"
      Padding="10">

            <!-- Botón menú -->
            <Button
        x:Name="MenuButton"
        Text="☰"
        FontSize="26"
        FontAttributes="Bold"
        BackgroundColor="#154369"
        HeightRequest="50"
        WidthRequest="50"
        HorizontalOptions="Start"
        VerticalOptions="Start"
        Clicked="OnMenuButtonClicked"/>

            <!-- MENÚ DESPLEGABLE -->
            <StackLayout
        x:Name="MenuOptions"
        IsVisible="False"
        BackgroundColor="White"
        WidthRequest="230"
        Spacing="5"
        Padding="5"
        Margin="0,55,0,0"
        HorizontalOptions="Start"
        VerticalOptions="Start"
        TranslationX="0"
        TranslationY="0"
        ZIndex="10">

                <Button Text="Tramita tu INE"
                Clicked="OnPagina1Clicked"
                BackgroundColor="#154369"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="18"/>

                <Button Text="Registro Compraventa"
                Clicked="OnPagina2Clicked"
                BackgroundColor="#154369"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="18"/>

                <Button Text="Testamentos"
                Clicked="OnPagina3Clicked"
                BackgroundColor="#154369"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="18"/>

                <Button Text="Cerrar sesión"
                Clicked="OnCerrarSesionClicked"
                BackgroundColor="#FF6666"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="18"/>
            </StackLayout>

        </Grid>


        <!-- ================= IMAGEN GRANDE CENTRADA ================= -->
        <Grid Grid.Row="1">
            <Image
                        Source="empresa2.png"
                        HeightRequest="600"
                        Margin="0,50,0,0"
                        Opacity="0.4"
                       >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                            x:Name="imagen"
                            Tapped="Imagen_Tapped"
                            NumberOfTapsRequired="1" />
                </Image.GestureRecognizers>
            </Image>
        </Grid>

        <!-- ================= BOTONES INFERIORES ================= -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*"
              Padding="10"
              BackgroundColor="White">

            <Button
                Text="Mis trámites"
                Grid.Column="0"
                BackgroundColor="#0a9396"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="12"
                HeightRequest="50"
                Clicked="OnMisTramitesClicked"/>

            <Button
                Text="Mis contratos"
                Grid.Column="1"
                BackgroundColor="#005f73"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="12"
                HeightRequest="50"
                Clicked="OnMisContratosClicked"
/>

        </Grid>

    </Grid>
</ContentPage>
