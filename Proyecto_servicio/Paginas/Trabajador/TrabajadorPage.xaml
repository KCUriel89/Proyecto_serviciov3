<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_servicio.Paginas.Trabajador.TrabajadorPage"
                         BackgroundColor="#dfdaca">

    <Grid RowDefinitions="Auto,*,Auto">


        <HorizontalStackLayout Padding="10">
            <Label Text="Panel Administrador"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#154369"/>
        </HorizontalStackLayout>


        <Grid Grid.Row="1">
            <Image
                        Source="empresa2.png"
                        HeightRequest="600"
                        Margin="0,50,0,0"
                        Opacity="0.4"
                       >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                            x:Name="imagen"
                            Tapped="Imagen_Tapped"
                            NumberOfTapsRequired="1" />
                </Image.GestureRecognizers>
            </Image>
        </Grid>


        <Grid Grid.Row="2"
              ColumnDefinitions="*,*"
              Padding="20"
              ColumnSpacing="15">


            <Button Text="Revisar citas"
                    Grid.Column="0"
                    BackgroundColor="#ae2012"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    HeightRequest="55"
                    Clicked="OnRevisarCitasCuentasClicked"/>

            <Button Text=""
                    Grid.Column="1"
                    BackgroundColor="#0a9396"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    HeightRequest="55"
                    Clicked="OnRevisionContratosClicked"/>
        </Grid>

    </Grid>
</ContentPage>