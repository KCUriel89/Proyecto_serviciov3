<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_servicio.Paginas.ChangePasswordPage"
             BackgroundColor="#dfdaca">
    <VerticalStackLayout>
        <Label Text="Cambiar contraseña"
               FontSize="22"
               HorizontalOptions="Center"/>

        <Entry x:Name="txtCodigo"
               Placeholder="Código recibido"/>

        <Entry x:Name="txtNuevaPassword"
               Placeholder="Nueva contraseña"
               IsPassword="True"/>
        <Entry x:Name="txtConfirmarNuevaPassword"
               Placeholder="Confirmar nueva contraseña"
               IsPassword="True"/>

        <Button Text="Cambiar contraseña"
                Clicked="OnCambiarPasswordClicked"/>
    </VerticalStackLayout>
</ContentPage>